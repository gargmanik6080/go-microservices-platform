# Broker Service Configuration (API Gateway)

# Server Configuration
PORT=8080
WEB_PORT=8080

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# Microservice URLs (Internal)
AUTH_SERVICE_URL=http://authentication-service:80
LOGGER_SERVICE_URL=http://logger-service:80
LOGGER_RPC_URL=logger-service:5001
MAIL_SERVICE_URL=http://mail-service:80

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://*,http://*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-CSRF-Token
CORS_MAX_AGE=300

# Logging
LOG_LEVEL=info
ENVIRONMENT=development

# Rate Limiting (future enhancement)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Circuit Breaker (future enhancement)
CIRCUIT_BREAKER_ENABLED=false
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30s

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_SECONDS=2

# Health Check
HEALTH_CHECK_INTERVAL=30s

# Notes:
# - This service acts as the API Gateway
# - All client requests should go through this service
# - Update service URLs if deploying to different hosts
