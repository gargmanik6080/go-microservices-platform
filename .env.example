# Go Microservices Platform - Environment Variables
# Copy this file to .env and update with your values

# ======================
# BROKER SERVICE
# ======================
BROKER_PORT=8080
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672

# ======================
# AUTHENTICATION SERVICE
# ======================
AUTH_PORT=80
DSN=host=postgres port=5432 user=postgres password=password dbname=users sslmode=disable timezone=UTC connect_timeout=5

# ======================
# LOGGER SERVICE
# ======================
LOGGER_PORT=80
LOGGER_RPC_PORT=5001
MONGO_URL=mongodb://admin:password@mongo:27017
MONGO_DATABASE=logs
MONGO_COLLECTION=log_entries

# ======================
# MAIL SERVICE
# ======================
MAIL_PORT=80
MAIL_DOMAIN=localhost
MAIL_HOST=mailhog
MAIL_SMTP_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=none
FROM_NAME=Your Name
FROM_ADDRESS=noreply@example.com

# ======================
# FRONTEND SERVICE
# ======================
FRONTEND_PORT=8081
BROKER_URL=http://localhost:8080

# ======================
# DATABASES
# ======================

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=users
POSTGRES_PORT=5432

# MongoDB
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password
MONGO_INITDB_DATABASE=logs
MONGO_PORT=27017

# ======================
# MESSAGE QUEUE
# ======================
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# ======================
# EXTERNAL SERVICES
# ======================

# MailHog (Development SMTP Server)
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

# ======================
# PRODUCTION SETTINGS
# ======================

# Set to 'production' for production environment
ENVIRONMENT=development

# JWT Configuration (future use)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h

# API Rate Limiting (future use)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Logging Level
LOG_LEVEL=info
# Options: debug, info, warn, error

# Enable CORS
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081

# ======================
# KUBERNETES DEPLOYMENT
# ======================

# Docker Registry (for K8s deployments)
DOCKER_REGISTRY=docker.io/yourusername
IMAGE_TAG=latest

# ======================
# MONITORING & OBSERVABILITY
# ======================

# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Jaeger Tracing
JAEGER_ENABLED=false
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# ======================
# SECURITY
# ======================

# API Keys (future use)
API_KEY_ENABLED=false
ADMIN_API_KEY=your-admin-api-key-here

# TLS Configuration
TLS_ENABLED=false
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem

# ======================
# NOTES
# ======================
# 1. Never commit .env file to version control
# 2. Update passwords and secrets for production
# 3. Use environment-specific .env files (.env.dev, .env.prod)
# 4. Consider using secrets management tools (Vault, AWS Secrets Manager) for production
