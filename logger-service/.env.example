# Logger Service Configuration

# Server Configuration
HTTP_PORT=80
RPC_PORT=5001

# MongoDB Configuration
MONGO_URL=mongodb://admin:password@mongo:27017
MONGO_HOST=mongo
MONGO_PORT=27017
MONGO_USERNAME=admin
MONGO_PASSWORD=password
MONGO_DATABASE=logs
MONGO_COLLECTION=log_entries
MONGO_TIMEOUT=30s

# Connection Pool Settings
MONGO_MIN_POOL_SIZE=10
MONGO_MAX_POOL_SIZE=100

# Logging Configuration
LOG_LEVEL=info
ENVIRONMENT=development

# Log Retention
LOG_RETENTION_DAYS=90
AUTO_DELETE_OLD_LOGS=false

# RPC Server Settings
RPC_NETWORK=tcp
RPC_ADDRESS=:5001

# Performance Settings
MAX_BATCH_SIZE=100
BATCH_TIMEOUT=5s

# Notes:
# - Supports both HTTP and RPC protocols
# - RPC is faster for internal service-to-service calls
# - HTTP is used for external access
# - Update MongoDB credentials in production
